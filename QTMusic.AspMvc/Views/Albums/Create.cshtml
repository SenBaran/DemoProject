@model QTMusic.Logic.Entities.App.Album

@{
    ViewData["Title"] = "Create";
    var artistsList = new SelectList(ViewBag.ArtistsList, "Id", "Name");
    var genresList = new SelectList(ViewBag.GenresList, "Id", "Name");
}

<h1>Create</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ArtistId" class="control-label"></label>
                @Html.DropDownList("ArtistId", artistsList)
            </div>
            <div class="form-group">
                <label asp-for="GenreId" class="control-label"></label>
                @Html.DropDownList("GenreId", genresList)
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
